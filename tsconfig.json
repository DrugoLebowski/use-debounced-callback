{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [ "dom", "dom.iterable", "esnext", ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "strict": true,
    "rootDir": "./src",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "es5",
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__",
    "**/__mocks__"
  ],
}
